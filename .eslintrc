{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "SystemJS": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["error", 2],
    "react/jsx-uses-vars": 1,
    "react/no-deprecated": 1,
    "react/jsx-key": 1,
    "react/jsx-uses-react": 1,
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
